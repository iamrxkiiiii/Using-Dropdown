@model DesignationEntity

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Designation</h1>

<h4>Are you sure you want to delete this designation?</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <!-- Hidden field to preserve DesignationId -->
            <input type="hidden" asp-for="DesignationId" />

            <div class="form-group">
                <label asp-for="DesignationName" class="control-label"></label>
                <input asp-for="DesignationName" class="form-control" readonly />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
