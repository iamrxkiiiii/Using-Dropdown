@model DropdownDemo.Models.EmployeeEntity

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DesignationId"></label>
        <select asp-for="DesignationId" asp-items="ViewBag.DesignationList" class="form-control">
            <option value="">-- Select Designation --</option>
        </select>
        <span asp-validation-for="DesignationId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
